<section class="container my-4">
  <h1 class="text-primary text-center my-4">Add New Expense</h1>
  <%= form_with model: @expense, url: category_expenses_path ,class: 'form-container expense-form' do |form| %>
    <div class='field'>
      <%= form.label :name, class:"form-label" %>
      <%= form.text_field :name, autofocus: true, class:"form-control", required: true %>
    </div>
    <div class="field">
      <%= form.label :amount, class:'form-label' %>
      <%= form.number_field :amount, autofocus: true, step: '0.1',class:"form-control", required: true %>
    </div>
    <div class="field d-flex align-items-center my-4">
      <%= form.label :category, class:'form-label' %>
      <%= select_tag :category, options_for_select(@categories.map { |category| [category.name, category.id] }), 
      {prompt: 'Select Category', required: true, 
       class:"form-control ms-2"} %>
    </div>

    <%= form.submit "Add Expense", class: "btn btn-primary d-flex justify-content-center" %>
  <% end %>
</section>